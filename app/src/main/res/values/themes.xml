<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyNoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/gray</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/Theme.MaterialComponents.DayNight.DarkActionBar</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>